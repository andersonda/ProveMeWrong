<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="8dp"
    card:cardElevation="5dp"
    card:contentPadding="4dp"
    android:layout_margin="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/debate_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card:layout_constraintTop_toTopOf="parent"
            card:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card:layout_constraintTop_toTopOf="parent"
            card:layout_constraintBottom_toTopOf="@id/participants"
            card:layout_constraintLeft_toRightOf="@id/debate_icon"
            tools:text="Topic"/>

        <TextView
            android:id="@+id/participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card:layout_constraintTop_toBottomOf="@id/topic"
            card:layout_constraintBottom_toBottomOf="parent"
            card:layout_constraintLeft_toRightOf="@id/debate_icon"
            tools:text="Participants"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card:layout_constraintRight_toRightOf="parent"
            card:layout_constraintTop_toTopOf="parent"
            card:layout_constraintBottom_toBottomOf="parent"
            tools:text="Sun 11:45pm"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>